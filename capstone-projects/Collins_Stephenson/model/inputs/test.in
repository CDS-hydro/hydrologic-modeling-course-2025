#Description: 2D RICHARDS  mode sloping water table with recharge

SIMULATION
  SIMULATION_TYPE SUBSURFACE
  PROCESS_MODELS
    SUBSURFACE_FLOW flow
      MODE RICHARDS
    /
  /
  RESTART
    FILENAME ./2D_flow-steady-state-restart.h5
    RESET_TO_TIME_ZERO
  /  
END

SUBSURFACE

#=========================== numerical methods ================================
NUMERICAL_METHODS FLOW
  NEWTON_SOLVER
      ITOL_UPDATE 1.d0     ! Convergences with max change in pressure is 1 Pa.
  /
END 

#=========================== discretization ===================================
GRID
  TYPE STRUCTURED
  NXYZ 222 1 31
  BOUNDS
    0.d0 0.d0 0.d0
    222.d0 1.d0 6.2d0
  /
END
#=========================== material properties ==============================
MATERIAL_PROPERTY soil1
  ID 1
  CHARACTERISTIC_CURVES default
  POROSITY 0.30
  PERMEABILITY
    PERM_ISO 1.d-10 
  /
END

#=========================== characteristic curves ============================
CHARACTERISTIC_CURVES default
  SATURATION_FUNCTION VAN_GENUCHTEN
    ALPHA 1.d-4
    M 0.5d0
    LIQUID_RESIDUAL_SATURATION 0.1d0
  /
  PERMEABILITY_FUNCTION MUALEM_VG_LIQ
    M 0.5d0
    LIQUID_RESIDUAL_SATURATION 0.1d0
  /
END
#=========================== output options ===================================
OUTPUT
  TIME_UNITS y
  SNAPSHOT_FILE
    FORMAT HDF5
    PERIODIC TIME 1. d between 0. y and 0.25 y
    PERIODIC TIME 10. d between 0.25 y and 1. y
  /
  VARIABLES
    LIQUID_PRESSURE
    LIQUID_SATURATION
  /
  # velocity
  VELOCITY_AT_CENTER
END

#=========================== times ============================================
TIME
  FINAL_TIME 1.d0 y
  INITIAL_TIMESTEP_SIZE 0.1 h
  MAXIMUM_TIMESTEP_SIZE 30 d
END

#=========================== regions ==========================================
REGION all
  COORDINATES
    0.d0 0.d0 0.d0
    222.d0 1.d0 6.2d0
  /
END

REGION top
  FACE TOP
  COORDINATES
    0.d0 0.d0 6.2d0
    222.d0 1.d0 6.2d0
  /
END

REGION bottom
  FACE BOTTOM
  COORDINATES
    0.d0 0.d0 0.d0
    222.d0 1.d0 0.d0
  /
END

REGION east
  FACE EAST
  COORDINATES
    222.d0 0.d0 0.d0
    222.d0 1.d0 6.2d0
  /
END

REGION west
  FACE WEST
  COORDINATES
    0.d0 0.d0 0.d0
    0.d0 1.d0 6.2d0
  /
END

#=========================== flow conditions ==================================
FLOW_CONDITION initial
  TYPE
    LIQUID_PRESSURE HYDROSTATIC
  /
  DATUM 0.d0 0.d0 0.d0
  LIQUID_PRESSURE 101325.d0
END

FLOW_CONDITION recharge
  TYPE
    LIQUID_FLUX NEUMANN
  /
  LIQUID_FLUX 0.d0 cm/y
END

FLOW_CONDITION west
  TYPE
    LIQUID_PRESSURE CONDUCTANCE
  /
  CONDUCTANCE 1.d-13 # conductance - boundary permeability/thickness of soil interface->(10^-14 m^2) /(0.1 m)
  CYCLIC
  DATUM FILE ./no_seepage.txt
  LIQUID_PRESSURE 101325.d0
END

FLOW_CONDITION east
  TYPE
    LIQUID_PRESSURE CONDUCTANCE
  /
  CONDUCTANCE 1.d-13
  CYCLIC
  DATUM FILE ./BSFR_stage.txt
  LIQUID_PRESSURE 101325.d0
END

#=========================== condition couplers ===============================
INITIAL_CONDITION
  FLOW_CONDITION initial
  REGION all
END

BOUNDARY_CONDITION top
  FLOW_CONDITION recharge
  REGION top
END

BOUNDARY_CONDITION east
  FLOW_CONDITION east
  REGION east
END

BOUNDARY_CONDITION west
  FLOW_CONDITION west
  REGION west
END

#=========================== stratigraphy couplers ============================
STRATA
  REGION all
  MATERIAL soil1
END


END_SUBSURFACE
